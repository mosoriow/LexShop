@model IEnumerable < LexShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<h1>Products</h1>

<div class="container">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div style="height:450px; padding:10px; margin:2px; border:solid thin whitesmoke;">
                <div>
                    <img class="img" style="height:250px" src="~/Content/ProductImages/@item.Image" />
                </div>
                <div>
                    <strong>@Html.ActionLink(item.Name, "Details", new { id = item.ID })</strong>
                </div>
                <div>
                    <p>@item.Description</p>
                </div>
                <div>
                    <p>@item.Price</p>
                </div>
                <div>
                    <a href="#" class="btn btn-default">Add to Basket</a>
                </div>
            </div>
        </div>
    }
</div>
